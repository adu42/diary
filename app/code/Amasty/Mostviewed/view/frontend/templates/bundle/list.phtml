/** @var Amasty\Mostviewed\Block\Widget\PackList $block */
$collection = $block->getCollection();
?>

<?php if ($collection && $collection->getSize()) : ?>
    <div class="amrelated-bundle-page">
        <?php foreach ($collection as $parentProduct) : ?>
            <?= $block->renderBundle($parentProduct)?>
        <?php endforeach;?>
    </div>
    <?php if ($block->getPagerHtml()): ?>
        <div class="amrelated-bundle-toolbar toolbar bottom"><?= $block->getPagerHtml() ?></div>
    <?php endif ?>
<?php else :?>
    <?= __('There are no bundle packs yet.');?>
<?php endif; ?>
